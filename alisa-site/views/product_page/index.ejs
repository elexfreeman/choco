<% include ../base/head %>
<% include ../components/menu/menu_top %>

<div class="product-page">
    <div class="center-container-wrap-g">
        <div class="container grid-xl center-container">
            <div class="columns">
                <div class="col-menu-left column col-xs-12 col-sm-12 col-lg-4 col-xl-4 col-3">
                    <% include ../components/menu/menu_left %>
                </div>
                <div class="column col-xs-12 col-md-12 col-sm-12 col-lg-8 col-xl-8 col-9">

                    <div class="columns">
                        <div class="product-img column col-xs-12 col-sm-12 col-lg-4 col-xl-4 col-4">

                            <div
                                    caption="<%= product.caption %>"
                                    main_img = '/img/w512/<%= product.main_img.split('/')[product.main_img.split('/').length - 1] %>'
                                    img='[]'
                                    id="product_img">
                                <div class="columns">
                                    <div class="column col-12">
                                        <div>
                                            <div class="parallax">
                                                <div class="parallax-top-left" tabindex="1"></div>
                                                <div class="parallax-top-right" tabindex="2"></div>
                                                <div class="parallax-bottom-left" tabindex="3"></div>
                                                <div class="parallax-bottom-right" tabindex="4"></div>
                                                <div class="parallax-content">
                                                    <div class="parallax-front">
                                                    </div>
                                                    <div class="parallax-back">
                                                        <img src='/img/w512/<%= product.main_img.split('/')[product.main_img.split('/').length - 1] %>'
                                                             alt='<%= product.caption %>'
                                                             class="img-responsive rounded">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="product-info column col-xs-12 col-sm-12 col-lg-8 col-xl-8 col-8">
                            <div class="info">
                                <h1 class="caption"><%= product.caption %></h1>
                                <div class="availability">Доступность:<span>На складе</span></div>
                                <hr>
                                <div class="only_left">Осталось:<span>100 шт.</span></div>
                                <div class="price"><%= product.price %> руб.</div>
                                <div class="description">
                                    <%= product.caption %>
                                </div>
                                <div class="product-order" id='product_order' product_id="<%= product.id %>"
                                     price="<%= product.price %>">

                                </div>
                            </div>
                        </div>
                        <div class="details column col-xs-12">
                            <div class="base-head">Детали</div>
                            <div>
                                <%= product.caption %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include ../base/footer %>
</div>

<script type="text/javascript" src="/js/common.js?v=<%= ver %>" charset="utf-8"></script>
<script type="text/javascript" src="/js/product.js?v=<%= ver %>" charset="utf-8"></script>

<% include ../base/bottom %>
